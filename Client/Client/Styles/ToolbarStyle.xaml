<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

   
        <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary
                    Source="/Telerik.Windows.Themes.Windows8;component/Themes/telerik.windows.controls.navigation.xaml" />
        </ResourceDictionary.MergedDictionaries>

            <Style x:Key="GazToolBarStyle" TargetType="telerik:RadToolBar" BasedOn="{StaticResource RadToolBarStyle}">
        <Setter Property="IsOverflowOpen" Value="False" />
        <Setter Property="OverflowButtonVisibility" Value="Collapsed" />
        <Setter Property="GripVisibility" Value="Collapsed" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style TargetType="telerik:RadToolBar" BasedOn="{StaticResource GazToolBarStyle}" />

</ResourceDictionary>