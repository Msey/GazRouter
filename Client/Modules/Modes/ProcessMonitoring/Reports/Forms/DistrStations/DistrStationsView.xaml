<UserControl x:Class="GazRouter.Modes.ProcessMonitoring.Reports.Forms.DistrStations.DistrStationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:vm="clr-namespace:GazRouter.Modes.ProcessMonitoring.Reports.Forms.DistrStations"
             xmlns:controls="clr-namespace:GazRouter.Controls;assembly=Controls"
             xmlns:measurings1="clr-namespace:GazRouter.Controls.Measurings;assembly=Controls"
             xmlns:entityName="clr-namespace:GazRouter.Controls.EntityName;assembly=Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" 
             d:DesignWidth="400" 
             d:DataContext="{d:DesignInstance vm:DistrStationsViewModel}">

    

    <telerik:RadBusyIndicator IsBusy="{Binding IsBusyLoading}">
        <Grid>
            <Grid.Resources>
            
            </Grid.Resources>
            
            <telerik:RadTreeListView GridLinesVisibility="Both"
                                     AutoExpandItems="True" 
                                     AutoGenerateColumns="False"
                                     IsReadOnly="True"
                                     ItemsSource="{Binding Items}"
                                     CanUserFreezeColumns="False"
                                     RowIndicatorVisibility="Collapsed">

                <telerik:RadTreeListView.Columns>
                    <telerik:GridViewDataColumn Width="200" 
                                                Header="Наименование" 
                                                IsFilterable="False" 
                                                IsSortable="False" 
                                                TextWrapping="Wrap">
                        <telerik:GridViewDataColumn.CellTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding }"
                                                Margin="5">
                                    <ContentControl.Resources>
                                        <DataTemplate DataType="vm:StationItem">
                                            <entityName:EntityNameBlock Entity="{Binding Dto}"
                                                                        VerticalAlignment="Center"
                                                                        DisplayIcon="True"
                                                                        IsMenuEnable="True"
                                                                        FontWeight="Bold"
                                                                        DisplayType="True"/>
                                        </DataTemplate>

                                        <DataTemplate DataType="vm:OutputItem">
                                            <entityName:EntityNameBlock Entity="{Binding Dto}"
                                                                        VerticalAlignment="Center"
                                                                        DisplayIcon="True"
                                                                        IsMenuEnable="True"
                                                                        DisplayType="True"/>
                                        </DataTemplate>

                                        <DataTemplate DataType="vm:ItemBase" />
                                    </ContentControl.Resources>
                                </ContentControl>
                            </DataTemplate>
                        </telerik:GridViewDataColumn.CellTemplate>
                    </telerik:GridViewDataColumn>
                    
                    
                    
                    <telerik:GridViewDataColumn Width="60" 
                                                IsFilterable="False" 
                                                IsSortable="False">
                        <telerik:GridViewDataColumn.Header>
                            <StackPanel Margin="5">
                                <TextBlock Text="P,"/>
                                <controls:SmartTextBlock Text="[P]"/>
                            </StackPanel>
                        </telerik:GridViewDataColumn.Header>

                        <telerik:GridViewDataColumn.CellTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding }"
                                                Margin="5"
                                                HorizontalAlignment="Center">
                                    <ContentControl.Resources>
                                        <DataTemplate DataType="vm:StationItem">
                                            <measurings1:MeasuringBlock DataContext="{Binding PressureInlet}"
                                                                        FontWeight="Bold"/>
                                        </DataTemplate>
                                        <DataTemplate DataType="vm:OutputItem">
                                            <measurings1:MeasuringBlock DataContext="{Binding PressureOutlet}"/>
                                        </DataTemplate>
                                    </ContentControl.Resources>
                                </ContentControl>
                            </DataTemplate>
                            
                        </telerik:GridViewDataColumn.CellTemplate>
                    </telerik:GridViewDataColumn>
                    
                    
                    

                    <telerik:GridViewDataColumn Width="60" 
                                                IsFilterable="False" 
                                                IsSortable="False">
                        <telerik:GridViewDataColumn.Header>
                            <StackPanel Margin="5">
                                <TextBlock Text="T,"/>
                                <controls:SmartTextBlock Text="[T]"/>
                            </StackPanel>
                        </telerik:GridViewDataColumn.Header>

                        <telerik:GridViewDataColumn.CellTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding }"
                                                Margin="5"
                                                HorizontalAlignment="Center">
                                    <ContentControl.Resources>
                                        <DataTemplate DataType="vm:StationItem">
                                            <measurings1:MeasuringBlock DataContext="{Binding TemperatureInlet}" 
                                                                        FontWeight="Bold"/>
                                        </DataTemplate>
                                        <DataTemplate DataType="vm:OutputItem">
                                            <measurings1:MeasuringBlock DataContext="{Binding TemperatureOutlet}" />
                                        </DataTemplate>
                                    </ContentControl.Resources>
                                </ContentControl>
                            </DataTemplate>

                        </telerik:GridViewDataColumn.CellTemplate>
                    </telerik:GridViewDataColumn>



                    <telerik:GridViewDataColumn Width="70" 
                                                IsFilterable="False" 
                                                IsSortable="False">
                        <telerik:GridViewDataColumn.Header>
                            <StackPanel Margin="5">
                                <TextBlock Text="Q факт,"/>
                                <TextBlock Text="тыс.м³"/>
                            </StackPanel>
                        </telerik:GridViewDataColumn.Header>
                        <telerik:GridViewDataColumn.CellTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding }"
                                                HorizontalAlignment="Center"
                                                Margin="5">
                                    <ContentControl.Resources>
                                        <DataTemplate DataType="vm:StationItem">
                                            <measurings1:MeasuringBlock DataContext="{Binding Flow}"
                                                                        FontWeight="Bold"/>
                                        </DataTemplate>
                                        <DataTemplate DataType="vm:OutputItem">
                                            <measurings1:MeasuringBlock DataContext="{Binding Flow}" />
                                        </DataTemplate>
                                        <DataTemplate DataType="vm:ItemBase" />
                                    </ContentControl.Resources>
                                </ContentControl>
                            </DataTemplate>
                        </telerik:GridViewDataColumn.CellTemplate>
                    </telerik:GridViewDataColumn>



                    <telerik:GridViewDataColumn Width="70" 
                                                IsFilterable="False" 
                                                IsSortable="False">
                        <telerik:GridViewDataColumn.Header>
                            <StackPanel Margin="5">
                                <TextBlock Text="Q план,"/>
                                <TextBlock Text="тыс.м³"/>
                            </StackPanel>
                        </telerik:GridViewDataColumn.Header>
                        <telerik:GridViewDataColumn.CellTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding }"
                                                HorizontalAlignment="Center"
                                                Margin="5">
                                    <ContentControl.Resources>
                                        <DataTemplate DataType="vm:StationItem">
                                            <TextBlock Text="{Binding Plan, StringFormat='0.###'}" 
                                                       FontWeight="Bold"/>
                                        </DataTemplate>
                                        
                                        <DataTemplate DataType="vm:ItemBase" />
                                    </ContentControl.Resources>
                                </ContentControl>
                            </DataTemplate>
                        </telerik:GridViewDataColumn.CellTemplate>
                    </telerik:GridViewDataColumn>


                    <telerik:GridViewDataColumn Width="70" 
                                                IsFilterable="False" 
                                                IsSortable="False">
                        <telerik:GridViewDataColumn.Header>
                            <StackPanel Margin="5">
                                <TextBlock Text="Откл.,"/>
                                <TextBlock Text="тыс.м³"/>
                            </StackPanel>
                        </telerik:GridViewDataColumn.Header>
                        <telerik:GridViewDataColumn.CellTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding }"
                                                HorizontalAlignment="Center"
                                                Margin="5">
                                    <ContentControl.Resources>
                                        <DataTemplate DataType="vm:StationItem">
                                            <TextBlock Text="{Binding PlanDelta, StringFormat='+0.###;-0.###;#'}" 
                                                       FontWeight="Bold"/>
                                        </DataTemplate>

                                        <DataTemplate DataType="vm:ItemBase" />
                                    </ContentControl.Resources>
                                </ContentControl>
                            </DataTemplate>
                        </telerik:GridViewDataColumn.CellTemplate>
                    </telerik:GridViewDataColumn>




                    <telerik:GridViewDataColumn Width="80" 
                                                IsFilterable="False" 
                                                IsSortable="False">
                        <telerik:GridViewDataColumn.Header>
                            <StackPanel Margin="5">
                                <TextBlock Text="Q проект,"/>
                                <TextBlock Text="тыс.м³"/>
                            </StackPanel>
                        </telerik:GridViewDataColumn.Header>
                        <telerik:GridViewDataColumn.CellTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding }" 
                                                HorizontalAlignment="Center" 
                                                Margin="5">
                                    <ContentControl.Resources>
                                        <DataTemplate DataType="vm:StationItem">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Dto.CapacityRated}"
                                                           FontWeight="Bold"/>
                                            </StackPanel>
                                        </DataTemplate>
                                        <DataTemplate DataType="vm:OutputItem">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Dto.CapacityRated}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                        <DataTemplate DataType="vm:ItemBase" />
                                    </ContentControl.Resources>
                                </ContentControl>
                            </DataTemplate>
                        </telerik:GridViewDataColumn.CellTemplate>
                    </telerik:GridViewDataColumn>


                    <telerik:GridViewDataColumn Width="80" 
                                                IsFilterable="False" 
                                                IsSortable="False">
                        <telerik:GridViewDataColumn.Header>
                            <StackPanel Margin="5">
                                <TextBlock Text="Загрузка"/>
                                <TextBlock Text="от"/>
                                <TextBlock Text="проекта,"/>
                                <TextBlock Text="%"/>
                            </StackPanel>
                        </telerik:GridViewDataColumn.Header>
                        <telerik:GridViewDataColumn.CellTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding }" 
                                                HorizontalAlignment="Center" 
                                                Margin="5">
                                    <ContentControl.Resources>
                                        <DataTemplate DataType="vm:StationItem">
                                            <TextBlock Text="{Binding UtilizationProject, StringFormat='{0}%'}"
                                                       FontWeight="Bold" />
                                        </DataTemplate>
                                        <DataTemplate DataType="vm:OutputItem">
                                            <TextBlock Text="{Binding UtilizationProject, StringFormat='{0}%'}" />
                                        </DataTemplate>
                                        <DataTemplate DataType="vm:ItemBase" />
                                    </ContentControl.Resources>
                                </ContentControl>
                            </DataTemplate>
                        </telerik:GridViewDataColumn.CellTemplate>
                    </telerik:GridViewDataColumn>







                </telerik:RadTreeListView.Columns>

                <telerik:RadTreeListView.ChildTableDefinitions>
                    <telerik:TreeListViewTableDefinition ItemsSource="{Binding Childs}">
                    </telerik:TreeListViewTableDefinition>
                </telerik:RadTreeListView.ChildTableDefinitions>
                
            </telerik:RadTreeListView>
            
        </Grid>
    </telerik:RadBusyIndicator>
    
</UserControl>
