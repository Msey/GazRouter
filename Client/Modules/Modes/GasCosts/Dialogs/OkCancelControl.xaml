<UserControl x:Class="GazRouter.Modes.GasCosts.Dialogs.OkCancelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"      
>
    <StackPanel Orientation="Horizontal" Margin="0, 11, 0, 0" HorizontalAlignment="Right">
        <telerik:RadButton Width="85" Margin="7, 0, 0, 0" Command="{Binding SaveCommand}" 
                                       Content="Сохранить" Style="{StaticResource StyleConfirmationButton}" 
                                       telerik:RadWindow.ResponseButton="Accept" />
        <telerik:RadButton Width="85" Margin="7, 0, 0, 0"  Command="{Binding CancelCommand}" 
                                       Style="{StaticResource StyleConfirmationButton}" 
                                       telerik:RadWindow.ResponseButton="Cancel" Content="Отмена" />
    </StackPanel>
</UserControl>
